<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
                                         "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
 <session-factory>
  <property name="hibernate.connection.driver_class">com.microsoft.sqlserver.jdbc.SQLServerDriver</property>
  <property name="hibernate.connection.password">123456789</property>
  <property name="hibernate.connection.url">jdbc:sqlserver://localhost:1433</property>
  <property name="hibernate.connection.username">sa</property>
  <property name="hibernate.default_catalog">DienThoaiSpringMVC</property>
  <property name="hibernate.default_schema">dbo</property>
  <property name="hibernate.dialect">org.hibernate.dialect.SQLServerDialect</property>
  <property name="hibernate.current_session_context_class">thread</property>
  <property name="hibernate.enable_lazy_load_no_trans">true</property>
  <mapping resource="pojo/DanhMuc.hbm.xml"/>
  <mapping resource="pojo/DienThoai.hbm.xml"/>
  <mapping resource="pojo/NhaSanXuat.hbm.xml"/>
  <mapping resource="pojo/ChiTietGioHang.hbm.xml"/>
  <mapping resource="pojo/GioHang.hbm.xml"/>
  <mapping resource="pojo/HoaDon.hbm.xml"/>
  <mapping resource="pojo/KhachHang.hbm.xml"/>
  <mapping resource="pojo/PhanQuyen.hbm.xml"/>
  <mapping resource="pojo/TaiKhoan.hbm.xml"/>
  <mapping resource="pojo/ChiTietHoaDon.hbm.xml"/>
 </session-factory>
</hibernate-configuration>
